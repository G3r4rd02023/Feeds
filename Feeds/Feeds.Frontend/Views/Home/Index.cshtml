@model IEnumerable<Feeds.Shared.Data.Entrada>
@{
    ViewData["Title"] = "Home Page";
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

@if (TempData["AlertMessage"] != null)
{
    <script>
        $(function () {
            Swal.fire({
                title: '¡Éxito!',
                text: '@TempData["AlertMessage"]',
                icon: 'success',
                confirmButtonText: 'Aceptar'
            });
        });
    </script>
}

<p>
    <a onclick="showInPopup('@Url.Action("Create", "Home", new { id = 0 })', '')"
       class="btn btn-sm btn-primary text-white mt-3"><i class="oi oi-plus"></i> Nueva Publicación</a>
</p>


@foreach (var post in Model)
{
    <div class="card mb-3">
        <div class="card-body">
            <div class="row">
                <!-- Columna izquierda: Imagen, Fecha, Usuario -->
                <div class="col-md-4">
                    <!-- Imagen -->
                    @if (post.URLImagen != null)
                    {
                        <img src="@post.URLImagen" class="img-fluid mb-3" style="max-width: 100%;" />
                    }
                    <!-- Fecha de publicación -->
                    <p class="text-muted">@post.FechaPublicacion.ToShortTimeString()</p>
                    <!-- Autor -->
                    <p>Autor: <strong>@post.Usuario!.Nombre</strong></p>
                </div>

                <!-- Columna derecha: Comentarios -->
                <div class="col-md-8">
                    <!-- Contenido de la publicación -->
                    <p class="card-text">@post.Contenido</p>

                    <!-- Mostrar comentarios -->
                    <h6 class="mt-3">Comentarios:</h6>
                    <ul class="list-group list-group-flush">
                        @foreach (var comentario in post.Comentarios)
                        {
                            <li class="list-group-item">
                                <strong>@comentario.Usuario</strong>: @comentario.Contenido
                                <span class="text-muted float-right">@comentario.FechaComentario.ToShortTimeString()</span>
                            </li>
                        }
                    </ul>

                    <!-- Formulario para agregar un comentario -->
                    @* Descomenta este bloque si deseas incluir el formulario *@
                    <!--
                    <form asp-action="AgregarComentario" method="post" class="mt-3">
                        <input type="hidden" name="postId" value="@post.Id" />
                        <div class="form-group">
                            <textarea class="form-control" name="contenido" rows="2" placeholder="Escribe un comentario..." required></textarea>
                        </div>
                        <button type="submit" class="btn btn-secondary btn-sm mt-2">Comentar</button>
                    </form>
                    -->
                </div>
            </div>
        </div>
    </div>

}

<partial name="_MostrarModal" />

@section Scripts {
    <script src="~/js/showmodal.js"></script>

}

