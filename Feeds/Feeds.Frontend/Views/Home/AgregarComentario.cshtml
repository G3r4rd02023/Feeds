@model Feeds.Shared.Data.Comentario
@{
    ViewData["Title"] = "AgregarComentario";
    Layout = "~/Views/Shared/ModalLayout.cshtml";
}

<form asp-action="AgregarComentario" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="EntradaId" />
    <input type="hidden" asp-for="UsuarioId" />
    <input type="hidden" asp-for="Usuario" />
    <div class="form-group">
        <textarea class="form-control" name="contenido" rows="2" placeholder="Escribe un comentario..." required></textarea>
    </div>
    <button type="submit" class="btn btn-secondary btn-sm mt-2">Comentar</button>
</form>

