@model Feeds.Frontend.Models.PublicacionViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/ModalLayout.cshtml";
}


<div class=" col-md-12">
    <div class=" card">
        <div class=" card-header text-center">
            <h5> Crear Publicación</h5>
        </div>
        <div class=" card-body text-center">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="UsuarioId"/>
                <input type="hidden" asp-for="Usuario" />

                <div class="form-group">
                    <label></label>
                    <input asp-for="Titulo" class="form-control" placeholder="Titulo" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label></label>
                    <textarea asp-for="Contenido" class="form-control" placeholder="Escribe algo..." rows="3" ></textarea>
                    <span asp-validation-for="Contenido" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label></label>
                    <textarea asp-for="Etiquetas" class="form-control" placeholder="#Vida, #Salud, #Educación...etc" rows="2"></textarea>
                    <span asp-validation-for="Etiquetas" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label></label>
                    <select asp-for="CategoriaId" asp-items="Model.Categorias" class="form-control"></select>
                    <span asp-validation-for="CategoriaId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label></label>
                    <input type="file" class="form-control mb-3" name="file" asp-for="URLImagen">
                </div>
                <div class=" card-footer ">
                    <div class="form-group">
                        <button type="submit" class="btn btn-sm btn-success"><i class="oi oi-check"></i> Guardar</button>
                        <button type="button" class="btn btn-sm btn-primary" data-bs-dismiss="modal"><i class="oi oi-ban"></i> Cancelar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


